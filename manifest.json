{
  "manifest_version": 2,
  "name": "Attention",
  "description": "Be attentive",
  "version": "0.1",
  "icons": { "128": "glasses.png" },
  "browser_action": {
    "default_icon": "specs.png",
    "default_title": "Pay Attention",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistence" : true
  },

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["chart.min.js"]
  }],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]

}
