{
  "manifest_version": 2,
  "name": "Attention",
  "description": "Mind your web usage!",
  "version": "0.3",
  "icons": { "128": "glasses128.png",
              "48": "glasses48.png"},
  "browser_action": {
    "default_icon": "specs.png",
    "default_title": "Pay Attention",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistence" : true
  },

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["chart.min.js"]
  }],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]

}
